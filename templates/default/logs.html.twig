{% extends 'base.loggedin.html.twig' %}

{% block body %}

            <table>
                <thead>
                <tr>
                    <th>DateTime</th>
                    <th>Channel</th>
                    <th>Level</th>
                    <th>Message</th>
                    <th>Context</th>
                </tr>
                </thead>
                <tbody>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.getCreatedDateTime()|date(date_time_format) }}</td>
                        <td>{{ log.getChannel()|upper }}</td>
                        <td>{{ log.getLevel()|upper }}</td>
                        <td>{{ log.getMessage() }}</td>
                        <td><pre>{{ log.getContext()|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </form>

{% endblock %}